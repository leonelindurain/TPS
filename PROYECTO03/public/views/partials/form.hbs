<div class="container">
    <form method="POST" action="/api/productos" id="products" class="mt-5">
        <div class="form-group">
            <label for="title">Nombre producto:</label>
            <input type="text" class="form-control" required="required" name="title" placeholder="Nombre" />
        </div>
        <div class="form-group">
            <label for="title">Descripcion:</label>
            <input type="text" class="form-control" required="required" name="description" placeholder="Descripcion" />
        </div>
        <div class="form-group">
            <label for="title">Codigo:</label>
            <input type="text" class="form-control" required="required" name="code" placeholder="Codigo" />
        </div>
        <div class="form-group">
            <label for="price">Precio:</label>
	        <input type="number"  class="form-control" required="required" name="price" placeholder="Precio" />
        </div>
        <div class="form-group">
            <label for="title">Stock:</label>
            <input type="number" class="form-control" required="required" name="stock" placeholder="Stock" />
        </div>
        <div class="form-group">
            <label for="thumbnail">Link de imagen:</label>
	        <input type="text"  class="form-control" required="required" name="thumbnail" placeholder="Ruta de imagen" />
        </div>
        <br>
	    <button type="submit" class="btn btn-success">Agregar producto</button>
    </form>
</div>