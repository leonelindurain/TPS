<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Centro de mensajes</title>
</head>

<body>
    <br>

    <div class="container col-8 align-self-center border mt-3 bg-light p-3" style="background-color:#e9ecef">
        <h2 class="text-center" style="color:blue">Centro de Mensajes:</h2>
        <h3 class="text-center" id="ratio"></h3>

        <form onsubmit="return addMessage(this)" class="mt-5">
            <div class="mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>

            <div class="container col-12">
                <table class="table">
                    <tbody id="messagesChat">

                    </tbody>
                </table>
            </div>

            <div class="mb-3 d-flex align-items-center">
                <div class="col-10">
                    <input type="text" class="form-control" id="text" name="text" placeholder="Ingrese su mensaje..."
                        required>
                </div>
                <div class="col-2 ml-2 text-center">
                    <input type="submit" value="Enviar">
                </div>
            </div>
        </form>
    </div>
    {{!-- boot strap --}}
    <script src="js/index.js"></script>
    <!-- Manejo de Fechas - date-fns v1.30.1 -->
