<div class="container">
  <form method="POST" action="http://localhost:8080/">
  <div class="form-group">
      <label for="title">Titulo del producto:</label>
      <input type="text" class="form-control" required="required" name="title" placeholder="Titulo" />
  </div>
  <div class="form-group">
      <label for="price">Precio el producto:</label>
    <input type="number"  class="form-control" required="required" name="price" placeholder="Precio" />
  </div>
  <div class="form-group">
      <label for="thumbnail">Link de imagen del producto:</label>
    <input type="text"  class="form-control" required="required" name="thumbnail" placeholder="Ruta de imagen" />
  </div>
  <br>
    <button type="submit" class="btn btn-primary">Agregar Producto</button>
      </form>
  </div>